<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView app:cardCornerRadius="30dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/priority_card"
            app:cardCornerRadius="20dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:background="#F44336"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:background="#F44336"
                android:paddingVertical="3dp"
                android:paddingHorizontal="10dp"
                android:id="@+id/priority_notify"
                android:layout_marginVertical="5dp"
                android:textColor="#fff"
                android:text="Medium Level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_below="@+id/priority_card"
            android:layout_marginHorizontal="15dp"

            android:textStyle="bold"
            android:text="Your current heart rate is 120 in sitting mode which is not good. Try to avoid heavy work for now and consult your doctor if this prolongs."
            android:id="@+id/content_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </RelativeLayout>







</androidx.cardview.widget.CardView>